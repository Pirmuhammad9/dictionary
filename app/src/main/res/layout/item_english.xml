<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_english_dialog"
    android:paddingBottom="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/close"
        android:src="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/word"
        android:text="@string/english"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/wordEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     <TextView
         android:id="@+id/wordEnglish"
         android:text="hello"
         android:textSize="16dp"
         app:layout_constraintTop_toBottomOf="@id/word"
         app:layout_constraintLeft_toLeftOf="@id/word"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/wordTrans"
        android:text="Transcription"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/wordEnglish"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/wordTransc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/wordTransc"
        android:text="/abeak/"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/wordTrans"
        app:layout_constraintLeft_toLeftOf="@id/wordTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/type"
        android:text="Type"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/wordTransc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/wordType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/wordType"
        android:text="adv"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/type"
        app:layout_constraintLeft_toLeftOf="@id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/uzbek"
        android:text="Uzbek"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/wordType"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/wordUzbek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/wordUzbek"
        android:text="adv"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/uzbek"
        app:layout_constraintLeft_toLeftOf="@id/uzbek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/countable"
        android:text="@string/countable"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/wordUzbek"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/wordCountable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/wordCountable"
        android:text="adv"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/countable"
        app:layout_constraintLeft_toLeftOf="@id/countable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>